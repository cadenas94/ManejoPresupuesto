@model TipoCuenta
@{
    ViewData["Titlle"] = "Crear Tipo Cuenta";
}

<h1>Crear Tipo de Cuenta</h1>

<h5>El tipo de cuenta se refier a como podemos agrupar cuentas.
    Ejuemplos: Préstamos, tarjetas de crédito, etc.
</h5>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Crear">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <button type ="submit" class=" btn btn-primary">Enviar</button>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}