@model Cuenta

@{
    ViewData["Title"] = "Borrar cuenta";
}

<h3 class="mb-3">¿Esta seguro que desea borrar la cuenta @Model.Nombre? </h3>

<form asp-action="BorrarCuenta">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Borrar confirmar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
